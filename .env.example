# Environment Variables - Veille Niger
# Copiez ce fichier vers .env et remplissez avec vos vraies valeurs

# API Configuration
API_URL=http://localhost:8000/ingest
API_HOST=0.0.0.0
API_PORT=8000

# Google Sheets (optionnel)
GOOGLE_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEET_NAME=Veille_Niger_Data

# Google Analytics (optionnel)
GA_MEASUREMENT_ID=G-XXXXXXXXXX
GA_API_SECRET=VOTRE_SECRET

# Scraper Configuration
SCRAPER_HEADLESS=true
SCRAPER_TIMEOUT=60000
ARTICLE_TIMEOUT=45000
MAX_ARTICLES_PER_KEYWORD=10

# Database
DATABASE_PATH=veille.db

# Logging
LOG_LEVEL=INFO

# Authentification (Dashboard & Settings)
# CHANGEZ CES VALEURS EN PRODUCTION
ADMIN_USERNAME=admin
ADMIN_PASSWORD=veille2024

LOG_FILE=logs/veille.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
